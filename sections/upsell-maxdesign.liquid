              {%- assign break_childloop = false -%}
              {%- assign upsell_match = false -%}
              {%- break -%}                            
            {%- else -%}
              {%- assign break_loop = true -%}
              {%- assign break_childloop = true -%}
              {%- assign upsell_match = true -%}
            {%- endif -%}
          {%- endfor -%}

        {%- else -%}
          {%- assign break_loop = false -%}	
        {%- endif -%}              

        {%- if break_childloop -%}{%- break -%}{%- endif -%}                         		                         

  #shopify-section-{{ section.id }} div.blockquote__wrapper blockquote:before,  #shopify-section-{{ section.id }} div.blockquote__wrapper blockquote:after{content:"\201C";font-size:50px;opacity:.3;font-style:normal;font-family: inherit;}
  #shopify-section-{{ section.id }} div.blockquote__wrapper blockquote:before{left:14px;top:20px;position:absolute;color:{{ section.settings.color_text }};}
  #shopify-section-{{ section.id }} div.blockquote__wrapper blockquote:after{content:"\201D";right:14px;bottom:0;position:absolute;color:{{ section.settings.color_text }};}

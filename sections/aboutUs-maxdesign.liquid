<div class="apropospage-cover"> 
  <h1 class="entry-title">{{ section.settings.title }}</h1>  
</div>
<div class="pagewidth">
  {% for block in section.blocks %}
    {% if block.type == 'introduction' %}
      <div class="blockquote__wrapper">
        <figcaption style="border:none; margin-top:30px">
          <blockquote style="text-align:left">
            {{ block.settings.intro }}
          </blockquote>
          <div class="author">{{ block.settings.author }}</div>
        </figcaption>
        <div style="clear:both"></div>
      </div>
    {% elsif block.type == 'button' %}
      {% unless block.settings.btn_text == blank %}
        {% capture btn_brightness %}{{ block.settings.btn_color | color_brightness | round }}{% endcapture %}
        {% assign btn_brightness = btn_brightness | plus:0 %}
        {% if btn_brightness > 40 %}{% assign btn_color_hover = block.settings.btn_color | color_darken: 10 %}{% else %}{% assign btn_color_hover = block.settings.btn_color | color_lighten: 15 %}{% endif %}
        <style>.btn-custom.btn-{{ block.id }}{background-color:{{ block.settings.btn_color }}}.btn-custom.btn-{{ block.id }}:hover{color:#fff;background-color:{{ btn_color_hover }}}</style>
        <form class="btn-custom__wrapper" action="{{ block.settings.btn_destination}}">
          <button type="submit" class="btn-custom btn-{{ block.id }}">{{ block.settings.btn_text }}</button>
        </form>
      {% endunless %}
    {% elsif block.type == 'images' %}
    	{% assign columns = block.settings.columns | plus: 0 %}
        <div class="flex-blocks">
        <div class="flex-one--whole {% if columns == 1 %}flex-special {% elsif columns == 2 %} flex-one--half {% elsif columns == 3 %} flex-one--third {% endif %}">
          <div class="flex-image">
            <img src="{{ block.settings.img1 | img_url: '1000x' }}">
          </div>     
          <div class="sidebar-box"  {% if block.settings.text1.size > 900 and block.settings.scdbtn_enable %}style="max-height:250px"{% endif %}>   
            <h3>{{ block.settings.title1 }}</h3> 
            {{ block.settings.text1 }} 
            {% if block.settings.text1.size > 900 and block.settings.scdbtn_enable %}
            <p class="read-more">
              <a href="#" class="button" style="background-color:{{ block.settings.color_scdbtn }};box-shadow:0px 0px 4px {{ block.settings.color_scdbtn | color_darken:15 }}">
                <strong>LIRE PLUS</strong>
              </a>
            </p>
            {% endif %}
          </div>
        </div>
        {% unless columns == 1 %}
        <div class="flex-one--whole {% if columns == 2 %} flex-one--half {% elsif columns == 3 %} flex-one--third {% endif %}">
          <div class="flex-image">
            <img src="{{ block.settings.img2 | img_url: '1000x' }}">
          </div>     
          <div class="sidebar-box"  {% if block.settings.text2.size > 900 and block.settings.scdbtn_enable %}style="max-height:250px"{% endif %}>   
            <h3>{{ block.settings.title2 }}</h3> 
            {{ block.settings.text2 }} 
            {% if block.settings.text2.size > 900 and block.settings.scdbtn_enable %}
            <p class="read-more">
              <a href="#" class="button" style="background-color:{{ block.settings.color_scdbtn }};box-shadow:0px 0px 4px {{ block.settings.color_scdbtn | color_darken:15 }}">
                <strong>LIRE PLUS</strong>
              </a>
            </p>
            {% endif %}
          </div>
        </div>
        {% endunless %}
        {% unless columns == 1 or columns == 2 %}
        <div class="flex-one--whole {% if columns == 2 %} flex-one--half {% elsif columns == 3 %} flex-one--third {% endif %}">
          <div class="flex-image">
            <img src="{{ block.settings.img3 | img_url: '1000x' }}">
          </div>     
          <div class="sidebar-box" {% if block.settings.text3.size > 900 and block.settings.scdbtn_enable %}style="max-height:250px"{% endif %}>   
            <h3>{{ block.settings.title3 }}</h3> 
            {{ block.settings.text3 }} 
            {% if block.settings.text3.size > 900 and block.settings.scdbtn_enable %}
            <p class="read-more">
              <a href="#" class="button" style="background-color:{{ block.settings.color_scdbtn }};box-shadow:0px 0px 4px {{ block.settings.color_scdbtn | color_darken:15 }}">
                <strong>LIRE PLUS</strong>
              </a>
            </p>
            {% endif %}
          </div>
        </div>
        {% endunless %}
      </div>
    {% elsif block.type == 'page' %}
  		{% assign divider = block.settings.divider %}
  	  	<div class="page_content">
          {% case block.settings.page_content %}
          {% when 'part1' %}
          {{ page.content | split: divider | first }}
          {% when 'part2' %}
          {{ page.content | split: divider | last }}
          {% when 'all' %}
          {{ page.content | remove: divider }}
          {% endcase %}
  		</div>
  	{% endif %}
  {% endfor %}
 
</div>
<script>
 addEventListener("load", function () {
    jQuery(function ($) {
        var $el,$p, $ps, $up, totalHeight;
        $(".sidebar-box .button").click(function () {
            totalHeight = 0;
            $el = $(this);
            $p = $el.parent();
            $up = $p.parent();
            $ps = $up.find("h3, p:not('.read-more')");
            var remaining = $(".sidebar-box .button").not(this);
            remaining.each(function () {
                $up.removeAttr("style");
                $up.fadeIn();
            });
            $ps.each(function () {
                totalHeight += $(this).outerHeight(!0);
            });
            $up.css({ height: $up.height(), "max-height": 9999 }).animate({ height: totalHeight });
            $p.fadeOut();
            return !1;
        });
    });
});
</script>
  
